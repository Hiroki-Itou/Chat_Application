<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/right_timeStamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="timeStamp"
        app:layout_constraintBottom_toBottomOf="@+id/right_messageView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/right_messageView"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center|start"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:drawableTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/right_imageView"
        app:layout_constraintEnd_toStartOf="@+id/right_imageView"
        app:layout_constraintStart_toEndOf="@+id/right_timeStamp"
        app:layout_constraintTop_toTopOf="@+id/right_imageView" />

    <ImageView
        android:id="@+id/right_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aoi" />
</androidx.constraintlayout.widget.ConstraintLayout>